<article class="edit-post">
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" name="post-title" value="{{post.title}}" />
            <br>
            <br>
            <label for="post-body">Body</label>
            <input type="text" name="post-body" value="{{post.body}}" />
        </div>
        <div>
            Created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>


    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>
        {{> comments post.comments}}
        <div>
            <button type="submit">add comment</button>
        </div>
    </form>
</article>

<script src="../public/stylesheets/javascript/edit-post.js"></script>
<script src="../public/stylesheets/javascript/delete-post.js"></script>
<script src="../public/stylesheets/javascript/comment.js"></script>